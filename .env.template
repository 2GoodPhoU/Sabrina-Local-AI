# Sabrina AI Configuration Template
# Copy this file to .env and fill in your specific values

# Core System Configuration
SABRINA_DEBUG_MODE=false
SABRINA_LOG_LEVEL=INFO
SABRINA_ENVIRONMENT=development

# Voice Service Configuration
VOICE_API_URL=http://localhost:8100
VOICE_DEFAULT_MODEL=en_US-amy-medium
VOICE_SPEED=1.0
VOICE_PITCH=1.0
VOICE_VOLUME=0.8

# Vision Service Configuration
VISION_CAPTURE_METHOD=auto
VISION_OCR_ENABLED=true
VISION_OBJECT_DETECTION_ENABLED=true
VISION_MAX_CAPTURE_IMAGES=5

# Smart Home Configuration
HOME_ASSISTANT_URL=http://homeassistant.local:8123
HOME_ASSISTANT_TOKEN=your_home_assistant_token
GOOGLE_HOME_URL=http://your-google-home-api-url

# Automation Configuration
AUTOMATION_MOUSE_MOVE_DURATION=0.2
AUTOMATION_TYPING_INTERVAL=0.1
AUTOMATION_FAILSAFE=true

# Memory Configuration
MEMORY_MAX_ENTRIES=20
MEMORY_USE_VECTOR_DB=false
MEMORY_VECTOR_DB_PATH=data/vectordb

# Security Configuration
ENCRYPTION_KEY=generate_a_strong_secret_key_here
